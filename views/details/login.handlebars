<!-- Begin page content -->
<main role="main" class="container-fluid col-lg-4 col-md-6" style="margin-top: 60px;">

    <form action="/login" method="post" class="needs-validated">
        <div class="form-group">
            <h1>
                <center>Please sign in</center>
            </h1>
            <hr>
        </div>
        <div class="form-group">
            <label for="uname" class="sr-only">User Name: </label>
            <input type="text" id="uname" name="uname" class="form-control" placeholder="User Name" required autofocus>
            <div class="valid-feedback">Valid.</div>
            <div class ="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
            <label for="psw" class="sr-only">Password: </label>
            <input type="password" id="psw" name="psw" class="form-control" placeholder="Password" required>
            <div class="valid-feedback">Valid.</div>
            <div class ="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </div>
        <p class="mt-5 mb-3 text-muted">RAP &copy; 2019-2020</p>
    </form>
    <div id="displayMessage">
        {{#if "displayMessage == 'login'"}}
        <p>{{loginMessage}}</p>
        {{/if}}
    </div>

</main>